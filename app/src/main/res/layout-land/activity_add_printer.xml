<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPrinter">

    <EditText
        android:id="@+id/addName"
        android:layout_width="286dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:ems="10"
        android:hint="@string/name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/addSerialNumber"
        android:layout_width="286dp"
        android:layout_height="45dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="@string/serialNumber"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/addName"
        app:layout_constraintStart_toStartOf="@+id/addName"
        app:layout_constraintTop_toBottomOf="@+id/addName" />

    <EditText
        android:id="@+id/editBirthday"
        android:layout_width="283dp"
        android:layout_height="45dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="@string/date"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/addSerialNumber"
        app:layout_constraintStart_toStartOf="@+id/addSerialNumber"
        app:layout_constraintTop_toBottomOf="@+id/addSerialNumber" />

    <EditText
        android:id="@+id/addPhoneNumber"
        android:layout_width="283dp"
        android:layout_height="45dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="@string/phonenumber"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/editBirthday"
        app:layout_constraintStart_toStartOf="@+id/editBirthday"
        app:layout_constraintTop_toBottomOf="@+id/editBirthday" />

    <EditText
        android:id="@+id/addDamageDesc"
        android:layout_width="283dp"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="phone"
        android:hint="@string/damage"
        app:layout_constraintEnd_toEndOf="@+id/addPhoneNumber"
        app:layout_constraintStart_toStartOf="@+id/addPhoneNumber"
        app:layout_constraintTop_toBottomOf="@+id/addPhoneNumber" />

    <Button
        android:id="@+id/button_add"
        android:layout_width="90dp"
        android:layout_height="61dp"
        android:onClick="addClick"
        android:text="ADD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.66"
        app:layout_constraintStart_toEndOf="@+id/addPhoneNumber"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.877" />
</androidx.constraintlayout.widget.ConstraintLayout>